{
  "name": "ydkjs",
  "version": "1.0.0",
  "description": "You Don't Know JavaScript",
  "main": "src/index.js",
  "scripts": {
    "build": "babel src -d lib",
    "watch": "babel src -d lib --watch",
    "start": "babel-node src/index.js",
    "lint-js": "eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\" .",
    "fix-js": "npm run lint-js",
    "lint": "npm run lint-js",
    "test": "nyc mocha",
    "test:debug": "nyc mocha --inspect-brk",
    "test:watch": "nyc mocha --watch || true",
    "test:coverage": "nyc check-coverage || true",
    "test:coverage:open": "open reports/index.html",
    "test:report": "nyc report"
  },
  "keywords": [],
  "author": "Julio Antúnez Tarín <julio.antunez.tarin@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.49",
    "@babel/core": "^7.0.0-beta.49",
    "@babel/node": "^7.0.0-beta.49",
    "@babel/preset-env": "^7.0.0-beta.49",
    "@babel/register": "^7.0.0-beta.49",
    "chai": "^4.1.2",
    "eslint": "^5.7.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "prettier": "^1.13.4"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "extension": [
      ".js"
    ],
    "exclude": [
      "lib"
    ],
    "temp-directory": "./reports/.nyc_output",
    "report-dir": "./reports",
    "reporter": [
      "text-summary",
      "lcovonly",
      "html"
    ],
    "require": [
      "@babel/register"
    ],
    "cache": true,
    "all": true
  }
}

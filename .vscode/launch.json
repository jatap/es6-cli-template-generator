{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug file source",
      "program": "${workspaceFolder}/src/${fileBasenameNoExtension}.js",
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "smartStep": true,
      "preLaunchTask": "build",
      "outFiles": [
        "${workspaceFolder}/.compiled/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug file compiled",
      "program": "${workspaceFolder}/.compiled/${fileBasenameNoExtension}.js",
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "smartStep": true,
      "preLaunchTask": "build",
      "outFiles": [
        "${workspaceFolder}/.compiled/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug test",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "sourceMaps": true,
      "args": [
        "${file}",
        "--no-timeouts"
      ],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": null,
      "env": {
        "NODE_ENV": "testing"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "sourceMaps": true,
      "args": [
        "test/**/*.ts",
        "--no-timeouts"
      ],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": null,
      "env": {
        "NODE_ENV": "testing"
      }
    }
  ]
}


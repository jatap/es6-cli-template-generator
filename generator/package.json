{
  "name": "XXX",
  "version": "0.1.0",
  "description": "XXX",
  "author": "Julio Antúnez Tarín <julio.antunez.tarin@gmail.com>",
  "license": "ISC",
  "keywords": [
    "javascript",
    "js",
    "node",
    "es6",
    "cli"
  ],
  "main": "src/cli.js",
  "bin": {
    "XXX": "src/cli.js"
  },
  "scripts": {
    "***": "<------------------ build -------------------------------------->",
    "build": "babel src -d .compiled",
    "watch": "babel src -d .compiled --watch",
    "start": "babel-node src/cli.js",
    "commit": "git cz",
    "release": "standard-version --no-verify -t ''",
    "****": "<----------------- lint --------------------------------------->",
    "lint": "yarn lint:js",
    "lint:js": "eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\" .",
    "lint:fix": "yarn lint:js -- --fix",
    "lint:check": "eslint --print-config .eslintrc | eslint-config-prettier-check",
    "*****": "<---------------- tests -------------------------------------->",
    "test": "jest",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:watch": "jest --watch --updateSnapshot || true",
    "test:coverage": "jest --coverage --updateSnapshot || true",
    "test:coverage:open": "open reports/coverage/index.html",
    "test:dev": "jest --watch --coverage --updateSnapshot || true"
  },
  "dependencies": {
    "config": "^3.3.3",
    "commander": "^7.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.16",
    "@babel/core": "^7.12.16",
    "@babel/node": "^7.12.16",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/preset-env": "^7.12.16",
    "@babel/register": "^7.12.13",
    "@types/jest": "^26.0.20",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^26.6.3",
    "commitizen": "^4.2.3",
    "cz-customizable": "^6.3.0",
    "debug": "^4.3.1",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "standard-version": "^9.1.0",
    "typescript": "^4.1.5"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "cz-customizable.js"
    }
  },
  "engines": {
    "node": "14.x.x",
    "npm": "7.x.x"
  }
}
